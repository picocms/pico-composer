            {% if meta.JS %}

                <script async src="{{ site_url }}/assets/js/{{ meta.JS|raw }}.js"></script>
            
            {% endif %}

            {% if meta.CSS %}

                <link rel="stylesheet" href="{{ theme_url }}/assets/css/{{ meta.CSS|raw }}.css">
            
            {% endif %}

        </footer>
