            <nav>

            {% set isFirstItem = true %}

            {% for order in range(1, pages|length + 1) %}
                {% for page in pages %}
                    {% if page.meta.footer_order == order %}
                        {% set linkText = page.meta.menu_title ?: page.title %}
                        {% if not isFirstItem %}|{% endif %}
                        <a href="{{ page.url }}" target="_blank">{{ linkText }}</a>
                        {% set isFirstItem = false %}
                    {% endif %}
                {% endfor %}
            {% endfor %}

            </nav>
